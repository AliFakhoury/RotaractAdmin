{% extends 'base.html.twig' %}

{% block body  %}

    <body style="font-size:120%;" class="hold-transition skin-blue sidebar-mini">

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>

    <style type="text/css">
        tfoot option {
            width: 100%;
            padding: 2px;
            border:1px solid black;
        }
    </style>

    <div class="wrapper">
        {% include 'AdminHeader.html.twig' %}

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" style="min-height: 1000px;">
            <!-- Content Header (Page header) -->
            <section class="content-header" style="height: 50px;">
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">View Technical Issues</li>
                </ol>
            </section>

            <section class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="box">
                            <div class="box-header">
                                <h3 class="box-title">View Technical Issues</h3>
                            </div>

                            <div class="box-body no-padding">
                                <table id="example"  class="table table-hover"  >
                                    <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Email</th>
                                        <th>Message</th>
                                        <th>Date</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                        {% for message  in messages %}
                                            <tr>
                                                <td> {{ message.messageID }} </td>
                                                <td> {{ message.email }} </td>
                                                <td> {{  message.message }}</td>
                                                <td>{{  message.date|date('Y-m-d') }}</td>
                                                <td>
                                                    <a href="mailto:{{ message.email }}"><i class="material-icons">message</i></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>

                                </table>

                                <div class="box-footer clearfix" style="float:right;">
                                    {% set link = '/RotaractAdminPage/web/app_dev.php/Admin/ViewMessages/' %}

                                    {% include 'pagination/pagination.html.twig' with {
                                    currentFilters: { 'pageNumber': pageNumber , 'language': app.request.locale },
                                    currentPage: pageNumber,
                                    paginationPath: link,
                                    lastPage: numPages,
                                    showAlwaysFirstAndLast: false
                                    } only %}
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </section>

        </div>

    </div>

    </body>


{% endblock %}