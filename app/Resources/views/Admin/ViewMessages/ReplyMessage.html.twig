{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        #pagination{
            float: right;
            margin-right: 2%;
        }

    </style>
{% endblock %}

{% block body %}

    <body style="font-size:120%;" class="hold-transition skin-blue sidebar-mini">

    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(function () {
            $('.js-datepicker').datepicker({
                format: 'yyyy-mm-dd'
            });
        });
    </script>

    <div id="container">
        <div class="wrapper">

            {% include 'AdminHeader.html.twig' %}

            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper" style="min-height: 1000px;">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <ol class="breadcrumb">
                        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                        <li class="active">View Messages</li>
                    </ol>
                </section>

                <section class="content" style="margin-top: 2%">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="box box-primary" style="width: 100%;">
                                {% set submit = "submit" %}
                                {% set clear = "clear" %}

                                {{ form_start(form) }}
                                <h4>Email: {{ message.email }}</h4>
                                <h4>Message:  {{ message.message }}</h4>
                                <h4>Reply</h4> {{ form_widget(form.reply) }}

                                {{ form_widget(form.send)}}

                                {{ form_end(form)}}
                                <p></p>
                                {#<a href="{{ path('Users',{'pageNumber':pageNumber,'language':app.request.locale}) }}"  style="color:white;background-color:rgb(60,141,188)" class="btn btn-primary" >Back</a>#}

                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    </body>
{% endblock %}

